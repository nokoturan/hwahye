      <div class="form_intro">
        <div class="board_head">
          <h1> 후기 등록</h1>
          <hr>
        </div>
        <div class="board_form">
          <%= form_for(@board) do |f| %>
            <div class="field">
              <p>작성자 이름</p>
              <%= f.text_field :name %>
            </div>
            <div class="field">
              <p>제목</p>
              <%= f.text_field :title %>
            </div>
            <div class="field">
              <%= f.text_area :content %>
            </div>
            <div class="actions">
              <button type="submit">
                <img src="/01_main/write.png">
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
