<div class="main">
  <div class="menu_logo">
    <div class="hori_logo">
      <a href="/">
        <img src="/01_main/main_logo.png" class="logo">
        <img src="/program/hori_logo.png" class="logo_name">
      </a>
    </div>
    <div class="menu_bar">
      <a href="/main_page/intro">
        <div class="menu_hwahye area">
          <p>소개</p>
        </div>
      </a>
      <a href="/main_page/info">
        <div class="menu_info area">
          <p>화혜</p>
        </div>
      </a>
      <a href="/main_page/program">
        <div class="menu_program area">
          <p>프로그램</p>
        </div>
      </a>
      <a href="/main_page/road">
        <div class="menu_road area">
          <p>오시는길</p>
        </div>
      </a>
      <a href="/main_page/qna">
        <div class="menu_qna area">
          <p>문의하기</p>
        </div>
      </a>
    </div>
  </div>
  <div class="pro_content color_back">
    <div class="left_side">
      <div class="sub_menu">
        <div class="sub_bar">
          <a href="/main_page/program"><li><p>프로그램</p></li></a>
        </div>
        <div class="sub_bar">
          <a href="/reserves"><li><p>예약하기</p></li></a>
        </div>
        <div class="sub_bar">
          <a href="/boards"><li><p>후기게시판</p></li></a>
        </div>
      </div>
    </div>
    <div class="reserve_back">
      <div class="pro_intro">
        <div class="form_content">
          <img src="/01_main/color_bar.png">
            <div class="t_head">
              <h2>프로그램명</h2>
              <h3>체험날짜</h3>
              <h4>가능인원</h4>
            </div>
            <hr>
            <div class="t_body">
              <% @reserves.each do |reserf| %>
                <% if reserf.booking == 0 %>
                  <p class="t_num"><%= reserf.title %></a></p>
                <% else %>
                  <p class="t_num"><a href="/reserves/<%= reserf.id %>/people/new"><%= reserf.title %></a></p>
                <% end %>
                <p class="t_date"><%= reserf.reser_time %></p>
                <p class="t_people"><%= reserf.booking %></p>
              <% end %>
            </div>
        </div>
        <img style="width: 90%; margin-bottom: 0" src="/01_main/color_bar.png">
      </div>
    </div>
  </div>
</div>
